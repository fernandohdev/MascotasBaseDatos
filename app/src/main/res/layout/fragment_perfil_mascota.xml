<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.curso.logotipo.vista.PerfilMascotaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgFotoCV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/alvinoo"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/descripcion_foto_mascota"
            />

        <TextView
            android:id="@+id/tvNombreMascotaPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alvin"
            android:textSize="@dimen/nombre_cardview"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMascotasPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/activity_horizontal_margin"
                />

        </GridLayout>
    </LinearLayout>
</FrameLayout>
